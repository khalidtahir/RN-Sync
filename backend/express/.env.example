# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================

# Local Docker PostgreSQL (default for development)
DATABASE_URL=postgresql://postgres:password@localhost:5432/rn_sync

# Supabase Cloud
# DATABASE_URL=postgresql://postgres:[PASSWORD]@[HOST].supabase.co:5432/postgres

# AWS RDS
# DATABASE_URL=postgresql://postgres:[PASSWORD]@[ENDPOINT].rds.amazonaws.com:5432/rn_sync

# ============================================
# SERVER CONFIGURATION
# ============================================

PORT=5000
NODE_ENV=development

# ============================================
# WEBSOCKET CONFIGURATION
# ============================================

WEBSOCKET_PORT=3000

# ============================================
# AWS S3 / FILE STORAGE (Optional)
# ============================================

# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# S3_BUCKET_NAME=rn-sync-bucket
# AWS_REGION=us-east-1

# ============================================
# SUPABASE STORAGE (Optional)
# ============================================

# SUPABASE_URL=https://[project-id].supabase.co
# SUPABASE_ANON_KEY=your_anon_key
# SUPABASE_SERVICE_KEY=your_service_key

# ============================================
# JWT / AUTHENTICATION (Optional)
# ============================================

# JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
# JWT_EXPIRATION=24h

# ============================================
# LOGGING
# ============================================

LOG_LEVEL=debug
